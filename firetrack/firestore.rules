rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the 'users' collection (we'll add this later)
    // This allows a user to read and write to their own user profile document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the 'projects' collection
    match /projects/{projectId} {
      // A user can READ, UPDATE, or DELETE a project if their UID
      // matches the 'ownerId' field on the document they are trying to access.
      allow read, update, delete: if request.auth.uid == resource.data.ownerId;

      // A user can CREATE a project if their UID matches the 'ownerId'
      // field in the NEW document they are trying to create.
      // This prevents a user from creating a project for someone else.
      allow create: if request.auth.uid == request.resource.data.ownerId;
    }
  }
}